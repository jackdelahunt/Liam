    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug",
            "program": "${workspaceFolder}/bin/liamc/liamc",
            "args": [
                "--in=Code/main.liam",
                "--emit=Code/out.cpp", 
                "--include=runtime",
                "--stdlib=stdlib",
                "--out=Code/out.exe",
                "--time", 
                "--debug"
            ],
            "cwd": "${workspaceFolder}"
        }
    ]
}